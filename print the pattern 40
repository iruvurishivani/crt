#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

      int n;
    scanf("%d",&n);
    for(int i=0;i<n;i++)
    {
        int k=i;
        int h=0;
        while(h<k)
        {
            printf(" ");
            h++;
        }
        int p=0;
        while(p<n-h){
            printf("*");
            p++;
        }
        printf("\n");
        }
    return 0;
}
